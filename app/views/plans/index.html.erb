<p id="notice"><%= notice %></p>

<h1 style="text-align: center;">Plans</h1>
<div class="container">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Max value</th>
      <th>Min value</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.max_value %></td>
        <td><%= plan.min_value %></td>
        <td><%= plan.title %></td>
        <td><%= link_to 'Show', plan , class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) , class: "btn btn-warning"  %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path , class:"btn btn-primary" %>
</div>